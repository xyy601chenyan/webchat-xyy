<!DOCTYPE html>
<html>
  <head>
    <title>WebchatXyy</title>
     <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application' %>
    <%= include_sync_config %>

  </head>

  <body>
    <nav class="navbar ">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "WebChat", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav">

          <% if user_signed_in? %>
         <li><a>Hi, <%= current_user.name %></a></li>
          <li><%= link_to '修改账户', edit_user_registration_path %></li>

          <li><%= link_to "所有用户", users_path %></li>
          <li><%= link_to "我的好友", friendships_path %></li>
          <li><%= link_to "登出", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "登入", new_user_session_path %></li>
          <% end %>
          <li style="width:350px;margin-top:5px;margin-left:100px;"><%= render "users/search_bar" %></li>
        </ul>

      </div>
    </nav>

    <div class="container">

    <%= yield %>
    </div>
  </body>
</html>

<div class="col-md-4 col-md-offset-4">

<h2 align="center">注册</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">

    <%= f.input :name, label: "昵称",autofocus: true %>
  </div>

  <div class="field">

    <%= f.input :email, label:"邮箱",autofocus: true %>
  </div>

  <div class="field">

    <% if @minimum_password_length %>
    <em>(至少 <%= @minimum_password_length %>位密码)</em>
    <% end %><br />
    <%= f.input :password, label:"密码",autocomplete: "off" %>
  </div>

  <div class="field">

    <%= f.input :password_confirmation, label:"确认密码",autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "确定",class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

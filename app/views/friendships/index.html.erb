<div class="row">

  <%= render 'common/sidebar' %>
  <div class="col-md-9">
    <table class="table table-striped table-cell table-hover">
      <thead>
        <tr>
          <th>昵称</th>
          <th>邮箱</th>
          <th>未读消息</th>
          <th>聊天</th>
          <th>操作</th>

        </tr>
      </thead>
      <tbody>

        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.unread(current_user,friend) %>条</td>
          <td><%= link_to  conversations_path(:sender_id => current_user.id, :recipient_id => friend.id), method: 'post',class: "btn btn-success" do %>
                   <i class="fa fa-commenting-o" aria-hidden="true"></i>
                 <%end %>
               </td>
          <td><%= link_to  friendship_path(friend),method: :delete, class:"btn btn-danger", data: {confirm: "确定删除该好友?"} do %>
                  <i class= "fa fa-trash-o"></i>
                  <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

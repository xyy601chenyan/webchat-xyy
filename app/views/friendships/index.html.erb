<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-cell table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Conversation</th>

        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to "converstaion", conversations_path(:sender_id => current_user.id, :recipient_id => friend.id), method: :post %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">

  <%= render 'common/sidebar' %>
  <div class="col-md-9">
    <table class="table table-striped table-cell table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Unread</th>
          <th>Email</th>
          <th>Conversation</th>
          <th>Set</th>

        </tr>
      </thead>
      <tbody>

        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.unread(current_user,friend) %></td>
          <td><%= link_to "Conversation", conversations_path(:sender_id => current_user.id, :recipient_id => friend.id), method: 'post',class: "btn btn-primary" %></td>
          <td><%= link_to "delete", friendship_path(friend),method: :delete, class:"btn btn-danger", data: {confirm: "确定删除该好友?"} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
